generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Purchase {
  id          Int      @id @default(autoincrement())
  Group       String
  InvoiceDate String
  InvoiceNo   String
  Supplier    String
  Category    String
  Item        String
  Qty         Float
  Unit        String
  Price       Float
  Amount      Float
  GramsQty    Float
  Branch      String
  createdAt   DateTime @default(now())
}
